# OSGrid Setup
OS_CONFIG=osgrid
VOL_ROOT=C:\Users\<USER>\OpenSim\${OS_CONFIG}
CONFIG_TYPE=Grid
DOWNLOAD_URL=https://download.osgrid.org/osgrid-opensim-08132025.v0.9.3.3de5e6d.zip
PORTS_TCP=9100
PORTS_UDP=9100-9110
DIR_EXTRACT=""
TAG=latest

